---
interface Props {
  icon: string;
  title: string;
  description: string;
  tags: string[];
}

const { icon, title, description, tags } = Astro.props;
---

<div class="glass-card rounded-2xl p-6 text-left">
  <div class="project-image rounded-xl h-32 mb-4 flex items-center justify-center pointer-events-none select-none">
    <div class="text-4xl text-white/20">{icon}</div>
  </div>
  <h3 class="text-lg font-medium text-card-foreground mb-2 geist-font">{title}</h3>
  <p class="text-muted-foreground text-sm inter-font mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    {tags.map((tag) => (
      <span class="skill-badge px-2 py-1 rounded text-xs text-muted-foreground">{tag}</span>
    ))}
  </div>
</div>

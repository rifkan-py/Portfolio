---
interface Props {
  title: string;
  description: string;
  url: string;
  stars: number;
  forks: number;
  language?: string;
}

const { title, description, url, stars, forks, language } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="relative group block rounded-2xl h-full w-full overflow-hidden p-[1px]">
    <!-- Animated Border Background -->
    <div class="absolute inset-0 h-full w-full animate-border-rotate bg-[conic-gradient(from_var(--border-angle),theme(colors.transparent)_20%,theme(colors.blue.500)_80%,theme(colors.transparent)_100%)] opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    
    <!-- Card Content -->
    <div class="glass-card rounded-2xl p-6 text-left h-full flex flex-col relative bg-card">
        <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-medium text-card-foreground geist-font group-hover:text-blue-400 transition-colors">
            {title}
        </h3>
         <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground group-hover:text-foreground transition-colors"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
    </div>
  
  <p class="text-muted-foreground text-sm inter-font mb-6 line-clamp-2 flex-grow">{description}</p>
  
  <div class="flex items-center gap-4 text-sm text-muted-foreground mt-auto">
    {language && (
        <div class="flex items-center gap-1">
            <span class="w-3 h-3 rounded-full bg-blue-500"></span>
            <span>{language}</span>
        </div>
    )}
    <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
        <span>{stars}</span>
    </div>
    <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="18" r="3"/><circle cx="6" cy="6" r="3"/><circle cx="18" cy="6" r="3"/><path d="M6 9v1a3 3 0 0 0 3 3h6a3 3 0 0 0 3-3V9"/></svg>
        <span>{forks}</span>
    </div>
  </div>
    </div>
</a>

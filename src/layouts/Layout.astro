---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import AuroraBackground from '../components/AuroraBackground.astro';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { 
  title, 
  description = "Portfolio of Mohamed Rifkan, showcasing projects and skills.",
  keywords = "Mohamed Rifkan, Portfolio, Developer, Software Engineer, Projects"
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>
  <meta name="author" content="Mohamed Rifkan">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <title>{title}</title>
</head>
<body class="text-foreground geist-font min-h-screen relative overflow-x-hidden">
  
  <!-- Aurora Background Container -->
  <AuroraBackground />
  
  <div class="relative z-10 flex min-h-screen flex-col w-full max-w-full overflow-x-hidden">
    <!-- Navigation -->
    <Navigation currentPath={currentPath} />
    
    <div class="divider"></div>
    
    <!-- Main Content -->
    <slot />
    
    <!-- Footer -->
    <Footer />
  </div>
</body>
</html>
